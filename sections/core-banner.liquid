<section class="banner-{{ section.id }}">
  <div class="frame-change core-common-billboard  frame1 text-align-desk-{{ section.settings.text-align-desk }} text-align-sm-{{ section.settings.text-align-sm }}">
    <div class="core-common-billboard-wrapper core-common-billboard-wrapper-{{ section.settings.content-position }} core-vertical-billboard-wrapper-{{ section.settings.content-position-vertical }}">
      {%- for block in section.blocks -%}
        {% if block.settings['block-text-content'] != blank %}
          <p id="block-text-content-{{block.id}}" class="block-content">
            {{ block.settings['block-text-content'] }}
          </p>
          {% style %}
            .banner-{{ section.id }} #block-text-content-{{block.id}} {
              font-family: {{ block.settings.block-text-font-family }};
              font-size: {{ block.settings.block-text-font-size-lg }};
              font-weight: {{ block.settings.block-text-font-weight }};
              letter-spacing: {{ block.settings.block-text-letter-spacing }};
              line-height: {{ block.settings.block-text-line-height }};
              color:{{ block.settings.block-text-color }};
              margin:{{ block.settings.text-padding-top }} 0 {{ block.settings.text-padding-bottom }} 0;
              background-clip:text !important;
              -webkit-background-clip:text !important;
              -webkit-text-fill-color:{{ block.settings.text-fill-color }};
              background:{{ block.settings.block-color-gradient }};
              text-shadow:{{ block.settings.text-shadow }};
            }
            @media (max-width: 639px) {
              .banner-{{ section.id }} #block-text-content-{{block.id}} {
                font-size: {{ block.settings.block-text-font-size-sm }};
                letter-spacing: {{ block.settings.block-text-letter-spacing-sm }};
                line-height: {{ block.settings.block-text-line-height-sm }};
                margin:{{ block.settings.text-padding-top-sm }} 0 {{ block.settings.text-padding-bottom-sm }} 0;
              }
            }
          {% endstyle %}
        {% endif %}
    {%- endfor -%}
    </div>
  </div>
</section>

{% style %}

    main#MainContent {
        overflow: hidden;
    }
    .banner-{{ section.id }} .core-common-billboard {
