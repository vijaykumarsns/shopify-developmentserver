    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
    -ms-flex-pack: center;
    justify-content: center;
  }
      
    .banner-{{ section.id }} .core-common-billboard  a:hover {
             text-decoration: none;
    }
   .banner-{{ section.id }} .core-common-billboard img {
     max-width: 100%;
   }
   .banner-{{ section.id }} .core-common-billboard .offer-image-section img {
            height: 100%;
    }

    @media (min-width: 40em) {
        .banner-{{ section.id }} .core-common-billboard.text-align-desk-center {
              text-align: center;
    }
    .banner-{{ section.id }} .core-common-billboard.text-align-desk-left {
              text-align: left;
    }
    .banner-{{ section.id }} .core-common-billboard.text-align-desk-right {
              text-align: right;
    }
       .banner-{{ section.id }} .core-common-billboard .block-cta {
               letter-spacing: .069vw;
               height: 3.5vw;
        }

       .banner-{{ section.id }} .core-common-billboard .core-common-billboard-wrapper{
        width:{{ section.settings.content-width-desktop }};
        position: absolute;
        }
        .banner-{{ section.id }} .core-common-billboard .core-common-billboard-wrapper-right {
          right:{{ section.settings.content-position-right }};
        }
        .banner-{{ section.id }} .core-common-billboard .core-common-billboard-wrapper-left{
          left:{{ section.settings.content-position-left }};
        }
         .banner-{{ section.id }} .core-common-billboard .core-common-billboard-wrapper-center {
          right: 50%;
          left: 50%;
          transform: translateX(-50%);
        }
    .banner-{{ section.id }} .core-common-billboard-wrapper.core-common-billboard-wrapper-left.core-vertical-billboard-wrapper-center {
      transform: translateY(-50%);
      top: 50%;
    }
    .banner-{{ section.id }} .core-common-billboard-wrapper.core-common-billboard-wrapper-center.core-vertical-billboard-wrapper-center {
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    .banner-{{ section.id }} .core-common-billboard-wrapper.core-common-billboard-wrapper-right.core-vertical-billboard-wrapper-center {
      top: 50%;
      transform: translateY(-50%);
    }
        .banner-{{ section.id }} .core-common-billboard .core-vertical-billboard-wrapper-bottom {
          bottom: 3vw;
        }
    .banner-{{ section.id }} .core-common-billboard .core-vertical-billboard-wrapper-top {
